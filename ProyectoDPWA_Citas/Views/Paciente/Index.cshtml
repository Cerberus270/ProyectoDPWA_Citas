@model IEnumerable<ProyectoDPWA_Citas.Models.Paciente>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Menu Pacientes</h1>

<p>
    <a asp-action="Create" class="btn btn-success"><i class="bi bi-person-plus"></i> Crear nuevo Paciente</a>
</p>
<div class="table-responsive">
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombres)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Apellidos)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaNacimiento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Edad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Direccion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefono)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var fechaNac = item.FechaNacimiento.ToShortDateString();
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombres)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellidos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => fechaNac)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Edad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Direccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@item.IdPaciente" class="btn btn-sm btn-info"><i class="bi bi-pencil-square"></i> Editar</a>
                            <a asp-action="Details" asp-route-id="@item.IdPaciente" class="btn btn-sm btn-primary ml-1"><i class="bi bi-postcard"></i> Detalles</a>
                        </div>
                        <br />
                        @*<a asp-action="Delete" asp-route-id="@item.IdPaciente" class="btn btn-sm btn-danger mt-1"><i class="bi bi-trash3"></i> Borrar</a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

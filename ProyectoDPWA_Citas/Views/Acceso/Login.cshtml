@model Usuario
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <h2 class="heading-section">Clinica XYZ</h2>
            </div>
        </div>
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                @(TempData["Message"] as string)
            </div>
        }
        <div class="row justify-content-center">
            <div class="col-md-7 col-lg-5">
                <div class="test">
                    <img class="img-t img-fluid" src="https://images.unsplash.com/photo-1505751172876-fa1923c5c528" />
                    <div class="p-4">
                        <div class="d-flex">
                            <div class="w-100">
                                <h3 class="mb-4">Iniciar Sesión</h3>
                            </div>
                        </div>
                        <form asp-controller="Acceso" asp-action="Login" method="post">
                            <div class="form-group">
                                <label class="control-label" for="txtUsername">
                                    Email
                                </label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">
                                            <i class="bi bi-person-circle"></i>
                                        </div>
                                    </div>
                                    <input type="text" class="form-control" id="txtUsername" title="Ingrese un Email" asp-for="Username" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="txtContra">
                                    Contraseña
                                </label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">
                                            <i class="bi bi-fingerprint"></i>
                                        </div>
                                    </div>
                                    <input id="txtContra" type="password" class="form-control" title="Ingrese una contraseña" asp-for="Contraseña" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary rounded submit px-3">Sign In</button>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-50 text-left">
                                    <label class="checkbox-wrap checkbox-primary mb-0">
                                        Recuerdame
                                        <input type="checkbox" checked>
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <div class="w-50 text-md-right">
                                    <a href="#">Olvide mi Contraseña</a>
                                </div>
                            </div>
                        </form>
                        @*<p class="text-center">¿Nuevo Paciente? <a asp-action="Register">Registrate</a></p>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
